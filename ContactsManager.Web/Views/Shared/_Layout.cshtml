<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Stylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    
    <div class="container">

        <div class="page-content">

            <div class="margin-bottom">
                <div class="flex" id="top-bar-div">
                    <div class="flex-1" id="app-title-div"> 
                    <h1 class="app-title"> 
                    <i class="fa-solid fa-people-simple"></i>
                    Contact Manager
                    </h1>   
                    </div>

                    <div class="flex-1 pr" id="search-box-div">

                        <div class="navbar account-links">


                            @if (User.Identity.IsAuthenticated)
                            {
                                <ul>
                                    <li>
                                    @User.Identity?.Name
                                </li>
                                <li>
                                    <a asp-controller="Account" asp-action ="Logout" >Logout</a>

                                </li>
                                </ul>
                            }
                            else
                            {
                                <ul>

                                    <li>
                                        @if (ViewBag.CurrentUrl == "~/Account/Register")
                                        {
                                            <a asp-controller="Account" class="nav-active" asp-action="Register">Register</a>
                                        }
                                        else
                                        {

                                            <a asp-controller="Account" asp-action="Register">Register</a>
                                        }
                                    </li>
                                <li>
                                        @if (ViewBag.CurrentUrl == "~/Account/Login")
                                        {
                                            <a asp-action="Login" class="nav-active" asp-controller="Account">Login</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Login" asp-controller="Account">Login</a>

                                        }
                                    </li>
                                </ul>

                            }


                        </div>

                    </div>

                </div>

               

            </div>


            <div class="navbar mb">



                <ul>
                    <li>
                        @if (ViewBag.CurrentUrl == "~/Person")
                        {

                            <a class="nav-active" href="/persons/index">Persons</a>
                        }
                        else
                        {
                            <a href="/persons/index">Persons</a>

                        }
                        @if (ViewBag.CurrentUrl == "~/Countries/UploadExcelFile")
                        {

                            <a class="nav-active" asp-action="UploadExcelFile" asp-controller="Countries">Upload Countries</a>
                        }
                        else
                        {
                            <a asp-action="UploadExcelFile" asp-controller="Countries">Upload Countries</a>

                        }
                    </li>
                </ul>


            </div>

     

       <div class="body">
           @RenderBody()



       </div>
        </div>

    </div>




    @RenderSection("scripts", required:false)
        
    
    



</body>
</html>
