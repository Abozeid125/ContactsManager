@if ( ViewBag.CurrentSortBy == ViewBag.ColumnName  && ViewBag.CurrentSortOrder == nameof(SortOrderOptions.Ascending))

{

	<th>

		<a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName
&sortOrderOptions=@nameof(SortOrderOptions.Descending)">

		@ViewBag.DisplayName
		</a>
		<i class="fa-solid fa-sort-up"></i>


	</th>
}
else if (ViewBag.CurrentSortOrder == nameof(SortOrderOptions.Descending) && ViewBag.CurrentSortBy == ViewBag.ColumnName )

{
	<th>

		<a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName
&sortOrderOptions=@nameof(SortOrderOptions.Ascending)">

		@ViewBag.DisplayName


		</a>

		<i class="fa-solid fa-sort-down"></i>




	</th>

}
else
{

	<th>

		<a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName
&sortOrderOptions=@nameof(SortOrderOptions.Ascending)">

			@ViewBag.DisplayName

		</a>



	</th>




}